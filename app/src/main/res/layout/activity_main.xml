<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity"
    android:padding="25dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/logo"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/b1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:shadowColor="@color/black"
        android:text="إنشاء حساب طالبة"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        tools:ignore="TextContrastCheck"/>

    <Button
        android:id="@+id/b2"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:shadowColor="@color/black"
        android:text="إنشاء حساب سائق باص"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        tools:ignore="TextContrastCheck"/>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:text="هل أنت طالبة وتملكين حساب؟"
        android:textAlignment="center"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="هل أنت سائق باص وتملك حساب؟"
        android:textAlignment="center"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="هل أنت مشرف؟"
        android:textAlignment="center"
        android:textSize="16sp"/>



    <TextView
        android:id="@+id/tv5"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="
        هذا البرنامج طور بأيدي طالبات علوم الحاسب الآلي\n
        جامعة أم القرى\n
© جميع الحقوق محفوظة 2022"
        android:textAlignment="center"
        android:textColor="#546E7A"
        android:layout_marginTop="100dp"
        android:textSize="14sp"/>
    </LinearLayout>
</RelativeLayout>


