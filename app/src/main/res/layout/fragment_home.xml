<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homeFragment"
    android:background="@color/background"
    android:padding="25dp">

    <!-- TODO: Update blank fragment layout -->



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginVertical="15dp"
        >
        <!--        1- map-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/map_student"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:src="@drawable/map_img" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv6"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="الموقع"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="18sp"/>

        </LinearLayout>

        <!--        2- icons-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            >
            <ImageView
                android:id="@+id/qr_code"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:src="@drawable/qr_code"
                />
            <ImageView
                android:id="@+id/driver_conversation"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:src="@drawable/driver_conversation"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:layout_marginBottom="2dp">
            <TextView
                android:id="@+id/tv1"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:text="QR code"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv3"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:text="محادثة السائق"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp">
            <ImageView
                android:id="@+id/edit_table"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:src="@drawable/edit_table"
                />

            <ImageView
                android:id="@+id/driver_rating"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:src="@drawable/driver_rating"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp">
            <TextView
                android:id="@+id/tv2"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:text="تعديل الجدول"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="18sp"/>


            <TextView
                android:id="@+id/tv4"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:text="تقييم السائق"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="18sp"/>
        </LinearLayout>

    </LinearLayout>







</FrameLayout>